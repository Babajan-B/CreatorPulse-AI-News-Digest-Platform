# CreatorPulse Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# SUPABASE DATABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
DATABASE_URL=your_supabase_database_connection_string

# ============================================
# JWT SECRET (Generate a secure random string)
# ============================================
JWT_SECRET=your_secure_jwt_secret_key_here

# ============================================
# MAILERSEND EMAIL SERVICE
# ============================================
# Get API key from https://app.mailersend.com/api-tokens
MAILERSEND_API_KEY=your_mailersend_api_key
MAILERSEND_FROM_EMAIL=your_verified_sender_email
MAILERSEND_FROM_NAME=CreatorPulse
MAILERSEND_ADMIN_EMAIL=your_admin_email_for_trial_accounts

# ============================================
# GROQ AI SERVICE
# ============================================
# Get API key from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key

# ============================================
# GOOGLE GEMINI (Optional - Alternative AI)
# ============================================
# Get API key from Google AI Studio
GEMINI_API_KEY=your_gemini_api_key

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001
